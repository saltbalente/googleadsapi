# Google Ads Dashboard Environment Variables
# Copy this file to .env and update with your actual values

# Google Ads API Configuration
GOOGLE_ADS_DEVELOPER_TOKEN=YOUR_DEVELOPER_TOKEN_HERE
GOOGLE_ADS_CLIENT_ID=YOUR_CLIENT_ID_HERE
GOOGLE_ADS_CLIENT_SECRET=YOUR_CLIENT_SECRET_HERE
GOOGLE_ADS_REFRESH_TOKEN=YOUR_REFRESH_TOKEN_HERE

# Optional: Manager Account (MCC) Login Customer ID
# GOOGLE_ADS_LOGIN_CUSTOMER_ID=123-456-7890

# Database Configuration (if using external database)
# DATABASE_URL=postgresql://user:password@localhost:5432/googleads_dashboard

# Redis Configuration (for advanced caching)
# REDIS_URL=redis://localhost:6379/0

# Notification Settings
# EMAIL_SMTP_SERVER=smtp.gmail.com
# EMAIL_SMTP_PORT=587
# EMAIL_USERNAME=your-email@gmail.com
# EMAIL_PASSWORD=your-app-password
# EMAIL_FROM=your-email@gmail.com

# Slack Integration
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Application Settings
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0

# Vercel Deployment Settings
VERCEL_ENV=production
VERCEL_URL=your-app-name.vercel.app

# Security
SECRET_KEY=your-secret-key-here-change-this-in-production

# Logging Level
LOG_LEVEL=INFO

# Cache Settings
CACHE_TTL_SECONDS=1800
CACHE_MAX_SIZE_MB=500

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST=10